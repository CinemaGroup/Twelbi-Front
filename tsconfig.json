{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],

			"@/layout": ["layout/*"],
			"@/screens": ["screens/*"],
			"@/templates": ["templates/*"],
			"@/ui": ["ui/*"],

			"@/api": ["api/*"],
			"@/app": ["app/*"],
			"@/assets": ["assets/*"],
			"@/constants": ["constants/*"],
			"@/data": ["data/*"],
			"@/hooks": ["hooks/*"],
			"@/libs": ["libs/*"],
			"@/providers": ["providers/*"],
			"@/schemas": ["schemas/*"],
			"@/seo": ["seo/*"],
			"@/server": ["server/*"],
			"@/services": ["services/*"],
			"@/shared": ["shared/*"],
			"@/store": ["store/*"],
			"@/translates": ["translates/*"],
			"@/utils": ["utils/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
